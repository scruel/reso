# PostgreSQL 数据库配置
# 复制此文件为 .env 并填入实际的数据库连接信息

# 数据库主机地址
POSTGRESQL_HOST=localhost

# 数据库端口
POSTGRESQL_PORT=5432

# 数据库名称
POSTGRESQL_NAME=postgres

# 数据库用户名
POSTGRESQL_USER=postgres

# 数据库密码
POSTGRESQL_PASSWORD=password

# 应用配置
# 调试模式 (true/false)
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 数据库连接池配置
# 最小连接数
DB_MIN_CONNECTIONS=1

# 最大连接数
DB_MAX_CONNECTIONS=10

# 连接超时时间（秒）
DB_CONNECTION_TIMEOUT=30

# 查询配置
# 单次查询最大返回记录数
MAX_RECORDS_PER_QUERY=1000

# 批量操作最大记录数
MAX_BATCH_SIZE=100

# 数据清理配置
# 自动清理超过多少天的记录（0表示不自动清理）
AUTO_CLEANUP_DAYS=0

# 导出文件配置
# 默认导出目录
EXPORT_DIR=./exports

# CSV 导出编码
CSV_ENCODING=utf-8